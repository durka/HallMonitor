

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DefaultActivity"
    android:gravity="clip_vertical">

    <!-- default_content -->
    <RelativeLayout
        android:id="@+id/default_content"
        android:layout_width="310dp"
        android:layout_height="125dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:visibility="visible">

        <!-- default_content_alarm -->
        <RelativeLayout
            android:id="@+id/default_content_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >
	            
	         <ImageButton
	           android:id="@+id/snoozebutton"
	           style="?android:attr/buttonStyleSmall"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignBaseline="@+id/dismissbutton"
	           android:layout_alignBottom="@+id/dismissbutton"
	           android:layout_alignParentLeft="true"
	           android:src="@drawable/snooze_button"
	           android:onClick="sendSnooze" />
	
	       	<ImageButton
	       	    android:id="@+id/dismissbutton"
	       	    style="?android:attr/buttonStyleSmall"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_alignParentRight="true"
	       	    android:layout_centerVertical="true"
	       	    android:src="@drawable/dismiss_button"
	       	    android:onClick="sendDismiss" />
	       	
       	</RelativeLayout>

        <!-- default_content_phone -->
        <RelativeLayout
            android:id="@+id/default_content_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >
       	
	       <ImageButton
	           android:id="@+id/hangup_button"
	           style="?android:attr/buttonStyleSmall"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignBaseline="@+id/pickup_button"
	           android:layout_alignBottom="@+id/pickup_button"
	           android:layout_alignParentLeft="true"
	           android:src="@drawable/ic_jog_dial_decline"
	           android:onClick="sendHangUp" />
	       
	
	        <TextView
	            android:id="@+id/call_from"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:text="@string/unknown_caller"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	       	<ImageButton
	       	    android:id="@+id/pickup_button"
	       	    style="?android:attr/buttonStyleSmall"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_alignParentRight="true"
	       	    android:layout_centerVertical="true"
	       	    android:src="@drawable/ic_jog_dial_answer"
	       	    android:onClick="sendPickUp" />
	       	
        </RelativeLayout>

        <!-- default_content_normal -->
        <RelativeLayout
            android:id="@+id/default_content_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="center" >

           <RelativeLayout
               android:id="@+id/default_widget"
               android:layout_width="match_parent"
               android:layout_height="75dp"
               android:gravity="center"
               android:layout_alignParentStart="false">

               <TextClock
                   android:id="@+id/default_text_clock"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:keepScreenOn="false"
                   android:textColor="#33b5e5"
                   android:gravity="center_vertical|center_horizontal"
                   android:editable="false"
                   android:singleLine="false"
                   android:maxLines="2"
                   android:format12Hour="HH:mm\ndd.MM.yyyy" />

               <ImageView
                   android:id="@+id/default_battery_picture"
                   android:layout_width="13dp"
	               android:layout_height="wrap_content"
	               android:layout_alignParentTop="true"
	               android:layout_marginTop="3dp"
	               android:layout_marginRight="10dp"
                   android:src="@drawable/stat_sys_battery"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentLeft="false"
                   android:layout_alignParentRight="true"
                   android:adjustViewBounds="false"
                   android:layout_marginBottom="10dp" />

           </RelativeLayout>

            <GridView
                android:id="@+id/default_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:horizontalSpacing="4dp"
                android:numColumns="0"
                android:choiceMode="none"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:columnWidth="24dp"
                android:padding="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:stackFromBottom="false"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/default_widget" />

            <ImageButton
                android:id="@+id/torchbutton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="sendToggleTorch"
                android:src="@drawable/ic_appwidget_torch_off"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- phone widget -->
    <GridLayout
        android:layout_width="310dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="6"
        android:rowCount="6"
        android:columnOrderPreserved="true"
        android:id="@+id/phone_widget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layoutMode="opticalBounds"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:gravity="center_horizontal"
            android:text="@string/caller_name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caller_number"
            android:id="@+id/caller_number"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/call_accept_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="2"
            android:layout_rowSpan="4" >

            <ImageView
                android:id="@+id/call_accept_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_call_accept" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call_reject_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="2"
            android:layout_rowSpan="4" >

            <ImageView
                android:id="@+id/call_reject_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_call_reject" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:gravity="center|center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/call_accept_slide"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_call_accept_slide" />

            <ImageView
                android:id="@+id/call_reject_slide"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/call_accept_slide"
                android:layout_toRightOf="@+id/call_accept_slide"
                android:background="@drawable/ic_call_reject_slide" />

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>
