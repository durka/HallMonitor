<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:robobunny="http://robobunny.com" >
    
    <org.durka.hallmonitor.PreferenceSwitchable
        android:key="pref_enabled"
        android:title="@string/pref_enabled"
        android:summary="@string/pref_enabled_summary"
        android:fragment="org.durka.hallmonitor.PreferenceFragmentLoader"
        android:defaultValue="false">
        <extra
            android:name="resource"
            android:value="preferences_general" />
        <extra
            android:name="title"
            android:value="@string/pref_enabled_title" />
    </org.durka.hallmonitor.PreferenceSwitchable>
    
    <org.durka.hallmonitor.PreferenceSwitchable
        android:key="pref_runasroot"
        android:title="@string/pref_runasroot"
        android:summary="@string/pref_runasroot_summary"
        android:defaultValue="false"
        android:dependency="pref_enabled" />
    
    <PreferenceScreen
        android:title="@string/pref_widgets"
        android:summary="@string/pref_widgets_summary"
        android:dependency="pref_enabled">
    
	    <CheckBoxPreference
	        android:key="pref_default_widget"
	        android:title="@string/pref_default_widget"
	        android:summary="@string/pref_default_widget_summary"
	        android:defaultValue="false"
	        android:disableDependentsState="true" />
	    
	    <CheckBoxPreference
	        android:key="pref_media_widget"
	        android:title="@string/pref_media_widget"
	        android:summary="@string/pref_media_widget_summary"
	        android:defaultValue="false" />
    
    
    </PreferenceScreen>
    
    <PreferenceScreen
        android:title="@string/pref_optional"
        android:summary="@string/pref_optional_summary"
        android:dependency="pref_enabled">
	    
	    <org.durka.hallmonitor.PreferenceSwitchable
	        android:key="pref_do_notifications"
	        android:title="@string/pref_notifications"
	        android:summary="@string/pref_notifications_summary"
	        android:defaultValue="false" />
	    
	    <org.durka.hallmonitor.PreferenceSwitchable
	        android:key="pref_flash_controls"
	        android:title="@string/pref_flash_controls"
	        android:summary="@string/pref_flash_controls_summary"
	        android:defaultValue="false"
	        android:dependency="pref_runasroot" />
	    
	    <org.durka.hallmonitor.PreferenceSwitchable
	        android:key="pref_camera_controls"
	        android:title="@string/pref_camera_controls"
	        android:summary="@string/pref_camera_controls_summary"
	        android:defaultValue="false"
	        android:dependency="pref_runasroot" />
	
	    <org.durka.hallmonitor.PreferenceSwitchable
	        android:key="pref_alarm_controls"
	        android:title="@string/pref_alarm_controls"
	        android:summary="@string/pref_alarm_controls_summary"
	        android:defaultValue="false"
	        android:dependency="pref_enabled" />
	
	    <org.durka.hallmonitor.PreferenceSwitchable
	        android:key="pref_phone_controls_user"
	        android:title="@string/pref_phone_screen"
	        android:summary="@string/pref_phone_screen_summary"
	        android:fragment="org.durka.hallmonitor.PreferenceFragmentLoader"
	        android:defaultValue="false"
	        android:dependency="pref_enabled">
	        <extra
	            android:name="resource"
	            android:value="preferences_phone" />
	        <extra
	            android:name="title"
	            android:value="@string/pref_phone_screen_title" />
	    </org.durka.hallmonitor.PreferenceSwitchable>
	    
	</PreferenceScreen>

    <!-- spacer -->
    <Preference
        android:title=""
        android:summary=""
        android:enabled="false" />
    
    <Preference
        android:key="pref_about"
        android:title="@string/pref_about"
        android:summary="@string/pref_about_summary"
        android:enabled="false" />

</PreferenceScreen>
